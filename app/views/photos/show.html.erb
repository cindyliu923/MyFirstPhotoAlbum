<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <h1><%= @photo.title %></h1>
      <h3><%= @photo.date %></h3><br/>
      <hr class="bar">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <%= image_tag @photo.file_location.url, size: "100%" , class: "img-thumbnail" %>
        </div>
          <p><%= simple_format(@photo.description) %></p>
          <h4><%= link_to '回首頁', photos_path %></h4>
    </div>
  </div>
</div>